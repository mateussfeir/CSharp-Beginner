// See https://aka.ms/new-console-template for more information
using System;
// Creating a basic calculator on C#
namespace Calculator // Note: actual namespace depends on the project name.
{
    internal class Program
    {
        static void Main(string[] args)
        {
            //First I need to get the input from the user as string, and then convert to double (number with decimals)
            //Getting the input:

            Console.WriteLine("Input the first number: ");

            //Saving the input as a string:

            string input_1 = Console.ReadLine();

            //Converting the string in a double type, we are going to create a new variable called number_1.

            double number_1 = double.Parse(input_1);

            //Getting the second input from the user

            Console.WriteLine("Input your second number: ");

            //Saving the input and converting to double at the same line:

            double number_2 = double.Parse(Console.ReadLine());

            //Creating a variable called sum to sum the numbers;

            double sum = number_1 + number_2;

            //Printing the input

            Console.WriteLine("The sum is: " + sum);

            Console.ReadKey();

        }
    }
}

